# ========================================
# REQUIRED: API Keys
# ========================================
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_NUMBER=+1XXXXXXXXXX

# ========================================
# REQUIRED: Database
# ========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ========================================
# REQUIRED: Email Service (Choose ONE)
# ========================================
# Option A: Resend (Recommended)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Option B: SendGrid (Alternative)
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxx

# Option C: SMTP (Fallback)
# SMTP_HOST=smtp.mail.yahoo.com
# SMTP_PORT=587
# SMTP_USER=your-email@yahoo.com
# SMTP_PASS=your-app-password

FROM_EMAIL=noreply@yourdomain.com
REPLY_TO_EMAIL=support@yourdomain.com

# ========================================
# OPTIONAL: AI Voice Configuration
# ========================================
VOICE=echo
# Options: alloy, echo, fable, onyx, nova, shimmer
TEMPERATURE=0.8
OPENAI_MODEL=gpt-4o-mini

# ========================================
# OPTIONAL: Text-to-Speech (ElevenLabs)
# ========================================
# ELEVENLABS_API_KEY=your-elevenlabs-api-key
# ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# ========================================
# OPTIONAL: Business Configuration
# ========================================
AGENT_NAME=Bolt
COMPANY_NAME=Bolt AI Group
PRODUCT_PITCH=Bolt AI Group builds custom AI agents for small businesses that answer every call 24/7, book appointments automatically, handle customer questions, and ensure you never lose business to a missed call - starting at just $199 per month.
MONTHLY_PRICE=$199

# ========================================
# OPTIONAL: Call Configuration
# ========================================
MAX_CALL_DURATION=3600
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=10

# ========================================
# OPTIONAL: Calendar Integration
# ========================================
# CALENDAR_BOOKING_URL=https://calendly.com/yourusername/demo
# GOOGLE_CALENDAR_ID=your-email@gmail.com

# ========================================
# OPTIONAL: Google Sheets Logging
# ========================================
# GOOGLE_SHEET_ID=your-google-sheet-id
# GOOGLE_WORKSHEET_NAME=Calls
# GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/service-account.json

